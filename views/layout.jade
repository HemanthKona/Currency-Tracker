html
	head
		title= pageTitle
	body
		header
			h1= pageTitle
		a(href="/") Home
		section.login
			ul
				if session.isLoggedIn
					li
						a(href="/logout") Logout
					li
						a(href="/transaction/newTransaction") New Transaction
					li
						a(href="/transactions") View transactions
					li
						a(href="/profile") Profile
				else
					li
						a(href="/login") Login
					li
						a(href="/signup") Create Account
		section.content
			block content