extends layout

block content
	form(method='post', action='/signup', enctype='application/x-www-form-urlencoded')
		h1 Sign up
		if exists
			.error
				| That user exists. Are you trying to
				a(href="/login") Login
		if invalid
			.error Please enter a valid email address and password
		ul
			li
				label(for='firstname') First Name:
				input#firstname(name='firstname')
			li
				label(for='lastname') Last Name:
				input#lastname(name='lastname')
			li
				label(for='email') Email:
				input#email(name='email')
			li

				label(for='password') Password:
				input#password(name='password', type='password')
			li
				label(for='currentCountry') Current country:
				input#currentCountry(name='currentCountry', placeholder="CAD, USD .. ")
			li
				label(for='homeCountry') Home country:
				input#homeCountry(name='homeCountry', placeholder="INR, EUR .. ")
		input(type='submit', value='Sign Up')