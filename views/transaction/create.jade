h3 Add new expenditure
	
action = transaction ? "/transaction/edit/"+transaction.id : "/transaction/create"
	
place = transaction ? transaction.place : ''
	
category = transaction ? transaction.category : ''
	
paymentType = transaction ? transaction.paymentType : ''
	
amountForeign = transaction ? transaction.amountForeign : ''

addTransaction = transaction ? 'Update' : 'Add'

groupNumber = group ? group.groupNumber : 0
	
form(method="post", action=action)
	.row
		.large-2.columns
			label(for="place") Place
			input#place(name="place", type='text', value=place, placeholder="place")

		.large-2.columns
			label(for="category") Category
			input#category(name="category", type='text', value=category, placeholder="category")

		.large-3.columns
			label(for="paymentType") Payment type
			select(name="paymentType")
				option(value="Cash") Cash
				option(value="Credit") Credit
				option(value="Debit") Debit
			
		.large-3.columns
			label(for="amountForeign") Amount
			input#amountForeign(name="amountForeign", type='text', value=amountForeign, placeholder="Amount(CAD)")

		.large-2.small-2.columns
			input#group(type="hidden", name="groupNumber", value=groupNumber)
			input#submit(class="button tiny buttonMarginTop", type="submit", value=addTransaction)
