extends ../layout
extends ../menu

block content
	.row
		.large-4.columns
			form(method='post', action='/signup', enctype='application/x-www-form-urlencoded')
				h1 Sign up
				if exists
					div(data-alert, class="alert-box warning radius")
						| That user exists. Are you trying to 
						a(href="/login") Login
				if invalid
					div(data-alert, class="alert-box warning radius")
						i.fi-alert 
						| Please enter a valid email address and password
				
				label(for='firstname') First Name:
				input#firstname(name='firstname', type='text')
				
				label(for='lastname') Last Name:
				input#lastname(name='lastname', type='text')
				
				label(for='email') Email:
				input#email(name='email', type='text')

				label(for='password') Password:
				input#password(name='password', type='password')
				
				label(for='currentCountry') Current country:
				input#currentCountry(name='currentCountry', type='text', placeholder="CAD, USD .. ")
				
				label(for='homeCountry') Home country:
				input#homeCountry(name='homeCountry', type='text', placeholder="INR, EUR .. ")
				
				input(class="button", type='submit', value='Sign Up')